<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#CCC"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_background_button_trang_chu"
            android:layout_margin="5dp"
            android:text="Gần tôi"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/nearby"
            android:gravity="center|left"
            android:padding="10dp"
            android:drawablePadding="10dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_background_button_trang_chu"
            android:layout_margin="5dp"
            android:text="Blogs"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/blog"
            android:gravity="center|left"
            android:padding="10dp"
            android:drawablePadding="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_background_button_trang_chu"
            android:layout_margin="5dp"
            android:text="Giao hàng"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/order"
            android:gravity="center|left"
            android:padding="10dp"
            android:drawablePadding="10dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_background_button_trang_chu"
            android:layout_margin="5dp"
            android:text="Game and fun"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/gameandfun"
            android:gravity="center|left"
            android:padding="10dp"
            android:drawablePadding="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_background_button_trang_chu"
            android:layout_margin="5dp"
            android:text="Đánh giá"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/review"
            android:gravity="center|left"
            android:padding="10dp"
            android:drawablePadding="10dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/custom_background_button_trang_chu"
            android:layout_margin="5dp"
            android:text="Top thành viên"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/user"
            android:gravity="center|left"
            android:padding="10dp"
            android:drawablePadding="10dp"
            />
    </LinearLayout>


</LinearLayout>