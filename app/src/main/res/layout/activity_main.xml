<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#CCC"
    tools:context="com.project.luulinhson.foody.View.Main.MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/chuf"
            />
        <RadioGroup
            android:id="@+id/rgTrangChu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:background="@drawable/custom_radiogroup"
            >
            <RadioButton
                android:id="@+id/rbODau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ở đâu"
                android:button="@android:color/transparent"
                android:background="@drawable/custom_radio_odau"
                android:checked="true"
                android:padding="5dp"
                android:textColor="@drawable/change_text_radio"
                />
            <RadioButton
                android:id="@+id/rbAnGi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ăn gì"
                android:button="@android:color/transparent"
                android:background="@drawable/custom_radio_angi"
                android:padding="5dp"
                android:textColor="@drawable/change_text_radio"
                android:checked="false"
                />
        </RadioGroup>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_add_white_24dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/lnMoiNhat"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="#FFF"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tvMoiNhat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mới nhất"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#CCC"
            />

        <LinearLayout
            android:id="@+id/lnDanhMuc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="#FFF"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tvDanhMuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#CCC"
            />

        <LinearLayout
            android:id="@+id/lnKhuVuc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:background="#FFF"
            android:layout_weight="1"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tvKhuVuc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TP.Hà Nội"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="15sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
